    <com.example.android.rollingbeadlibrary.RollingBeadImageView
        android:id="@+id/mimage"
        app:center_X="400"
        app:center_Y="350"
        app:direction="positive"
        app:movement="30"
        app:number_Of_Times="1"
        app:orientation="horizontal"
        app:radius="60"
        app:repetition_Times="150"
        android:layout_width="wrap_content"
        android:scaleType="fitEnd"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/four" />

    <Button
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="test1"
        android:text="test1" />

    <Button
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/test1"
        android:onClick="test2"
        android:text="test2" />

    <Button
        android:id="@+id/test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/test2"
        android:onClick="test3"
        android:text="test3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/test3"
        android:onClick="test4"
        android:text="test4" />
